@model Credit.System.App.Models.UserSessionModel;
@using DataBase.Operations.Interfaces;

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h2 class="card-title text-center mb-0">Registrar Usuário</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post" class="needs-validation" novalidate>
                        <!-- CPF Field -->
                        <div class="mb-3">
                            <label for="cpfInput" class="form-label">CPF</label>
                            <input type="text" id="cpfInput" name="Login" onfocus="applyCpfMask('cpfInput')" class="form-control"
                                   pattern="\d{3}\.\d{3}\.\d{3}-\d{2}"
                                   placeholder="000.000.000-00" required>
                            <div class="invalid-feedback">
                                Por favor, insira um CPF válido.
                            </div>
                        </div>

                        <!-- Email Field -->
                        <div class="mb-3">
                            <label for="emailInput" class="form-label">Email</label>
                            <input type="email" id="emailInput" name="Email" class="form-control"
                                   placeholder="seu@email.com" required>
                            <div class="invalid-feedback">
                                Por favor, insira um email válido.
                            </div>
                        </div>

                        <!-- Name Field -->
                        <div class="mb-3">
                            <label for="nameInput" class="form-label">Nome Completo</label>
                            <input type="text" id="nameInput" name="Name" class="form-control"
                                   placeholder="Nome Sobrenome" required>
                            <div class="invalid-feedback">
                                Por favor, insira seu nome completo.
                            </div>
                        </div>

                        <!-- Conditional Company Field -->
                        @if (Model.CompanyId == 1)
                        {
                            <div class="mb-3">
                                <label for="companyInput" class="form-label">Empresa</label>
                                <select class="form-control" id="state" name="CompanyId" required="">
                                    <option value="">Selecione</option>
                                    @foreach (Company company in Model.CompanyList)
                                    {
                                        // Get the description of the state
                                        <option value="@company.CompanyId">@company.Name</option>
                                    }
                                </select>
                            </div>
                        }

                        <!-- Submit Button -->
                        <div class="d-grid mt-4">
                            <button type="submit" id="btnRegisterUser"class="btn btn-secondary btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Registrar
                            </button>
                        </div>
                    </form>
                </div>
             
            </div>
        </div>
    </div>
</div>

<script src="/js/Utils.js"></script>