@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="/css/User.css" rel="stylesheet">
    <style>
        /* Custom modal size */
        .custom-modal {
            max-width: 1000px;
        }

        /* Full height modal content */
        .modal-content {
            min-height: 550px;
        }

        /* Image column styling */
        .image-column {
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            position: relative;
        }

        /* Overlay for image */
        .image-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.4);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
            padding: 2rem;
        }

        /* Login form container */
        .login-container {
            padding: 3rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            height: 100%;
        }

        /* Larger form elements */
        .form-control-lg {
            padding: 0.75rem 1rem;
            font-size: 1.1rem;
        }

        .btn-lg {
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
        }
    </style>
</head>
<body style="background-color: royalblue">

    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog custom-modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">Login</h5>
                </div>
                <div class="modal-body p-0">
                    <div class="row g-0 h-100">
                        <!-- Login Form Column -->
                        <div class="col-lg-6">
                            <div class="login-container">
                                <div class="mb-4">
                                    <label for="loginInput" class="form-label">CPF</label>
                                    <input type="text" id="loginInput" name="Login" maxlength="14" class="form-control form-control-lg" required>
                                </div>
                                <div class="mb-4">
                                    <label for="passwordInput" class="form-label">Senha</label>
                                    <input type="password" id="passwordInput" name="Password" class="form-control form-control-lg" required>
                                </div>
                                <div class="d-grid gap-2">
                                    <button type="submit" onclick="UserLogin()" class="btn btn-secondary btn-lg">
                                        <span id="globalSpinner"
                                              class="spinner-border spinner-border-sm me-2 d-none"
                                              role="status"
                                              aria-hidden="true">
                                        </span>
                                        Login
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Image Column - Now fills entire space -->
                        <div class="col-lg-6 d-none d-lg-block image-column"
                             style="background-image: url('https://images.unsplash.com/photo-1554224155-6726b3ff858f?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&q=80')">
                            <div class="image-overlay">
                                <div>
                                    <i class="bi bi-graph-up" style="font-size: 3rem;"></i>
                                    <h3 class="mt-3">Dashboard Financeiro</h3>
                                    <p class="mb-0">Acesse sua conta para gerenciar suas finanças</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="alert-container">
    </div>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/jquery-3.7.1.min.js"></script>
    <script src="/js/jquery.maskedinput.min.js"></script>
    <script src="/js/Utils.js"></script>
    <script src="/js/User.js"></script>

    <script>
        $(document).ready(function() {
            $('#loginModal').modal('show');

            // Force redraw to ensure proper rendering
            $('#loginModal').on('shown.bs.modal', function () {
                $(this).css('display', 'block');
            });
        });
    </script>

</body>
</html>