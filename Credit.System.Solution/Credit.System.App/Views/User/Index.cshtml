@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
 

    <style>
        body {
            background-color: royalblue;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
        }

        .custom-modal {
            max-width: 900px;
        }

        .modal-content {
            border-radius: 15px;
            overflow: hidden;
            height: 550px;
            border: none;
        }

        .login-container {
            padding: 3rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            height: 100%;
            background-color: white;
        }

        .image-container {
            background-image: url('/images/loginmodalimg.png');
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center;
            height: 100%;
            background-color: white;
        }

        .form-control-lg {
            padding: 0.75rem 1rem;
            font-size: 1.1rem;
            border-radius: 8px;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            padding: 0.75rem;
            font-size: 1.1rem;
            border-radius: 8px;
        }

        .modal-header {
            border-bottom: none;
            padding: 1.5rem 1.5rem 0;
            background-color: white;
        }

        .modal-title {
            font-weight: 600;
            font-size: 1.8rem;
            color: #333;
        }

        .form-label {
            font-weight: 500;
            color: #555;
        }

        @@media (max-width: 992px) {
            .image-container

        {
            display: none;
        }

        .col-lg-6 {
            width: 100%;
        }

        .modal-content {
            height: auto;
        }

        .login-container {
            padding: 2rem;
        }

        }
    </style>
</head>
<body>

    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog custom-modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">Login</h5>
                </div>
                <div class="modal-body p-0 h-100">
                    <div class="row g-0 h-100">
                        <!-- Login Form Column -->
                        <div class="col-lg-6 h-100">
                            <div class="login-container h-100">
                                <div class="mb-4">
                                    <label for="loginInput" class="form-label">CPF</label>
                                    <input type="text" id="loginInput" name="Login" maxlength="14" class="form-control form-control-lg" required>
                                </div>
                                <div class="mb-4">
                                    <label for="passwordInput" class="form-label">Senha</label>
                                    <input type="password" id="passwordInput" name="Password" class="form-control form-control-lg" required>
                                </div>
                                <div class="d-grid gap-2">
                                    <button type="submit" onclick="UserLogin()" class="btn btn-secondary btn-lg">
                                        <span id="globalSpinner"
                                              class="spinner-border spinner-border-sm me-2 d-none"
                                              role="status"
                                              aria-hidden="true">
                                        </span>
                                        Login
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Image Column -->
                        <div class="col-lg-6 d-none d-lg-block h-100">
                            <div class="image-container h-100"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="alert-container">
    </div>
    
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/jquery-3.7.1.min.js"></script>
    <script src="/js/jquery.maskedinput.min.js"></script>
    <script src="/js/Utils.js"></script>
    <script src="/js/User.js"></script>

    <script>
        $(document).ready(function() {
            $('#loginModal').modal('show');

            // Force redraw to ensure proper rendering
            $('#loginModal').on('shown.bs.modal', function () {
                $(this).css('display', 'block');
            });
        });
    </script>

</body>
</html>