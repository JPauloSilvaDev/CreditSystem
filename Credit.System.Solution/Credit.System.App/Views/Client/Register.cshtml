@using Credit.System.App.Enums
@using System.ComponentModel

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="../../dist/css/bootstrap.min.css" rel="stylesheet">
    <style type="text/css" id="operaUserStyle"></style>
</head>

@{
    var states = Enum.GetValues(typeof(States)).Cast<States>().ToList();
}

<body class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-8 order-md-1">
                <h4 class="mb-3">Cadastrar Cliente</h4>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="firstName">Nome</label>
                        <input type="text" class="form-control" id="firstName" placeholder="Digite o nome" value="" required="">
                        <div class="invalid-feedback">Valid first name is required.</div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="lastName">Email</label>
                        <input type="text" class="form-control" id="lastName" placeholder="Digite um email válido" value="" required="">
                        <div class="invalid-feedback">Valid last name is required.</div>
                    </div>
                </div>

                <div class="row">
                    <!-- CPF/CNPJ, Endereço, and Number side by side -->
                    <div class="col-md-4 mb-3">
                        <label for="username">CPF/CNPJ</label>
                        <input type="text" class="form-control" id="username" placeholder="CPF/CNPJ" required="">
                        <div class="invalid-feedback" style="width: 100%;">Your username is required.</div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="address">Endereço</label>
                        <input type="text" class="form-control" id="address" placeholder="Digite um endereço" required="">
                    </div>

                    <div class="col-md-2 mb-3">
                        <label for="addressNumber">Número</label>
                        <input type="number" class="form-control" id="addressNumber" placeholder="Número">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3"> 
                        <label for="state">Estado</label>
                        <select class="form-control" id="state" required="">
                            <option value="">Selecione</option>
                            @foreach (var state in states)
                            {
                                // Get the description of the state
                                var description = state.GetType()
                                .GetField(state.ToString())
                                .GetCustomAttributes(typeof(DescriptionAttribute), false)
                                .Cast<DescriptionAttribute>()
                                .FirstOrDefault()?.Description;

                                <option value="@state">@description</option>
                            }
                        </select>
                        <div class="invalid-feedback">Please provide a valid state.</div>
                    </div>

                    <div class="col-md-3 mb-3">
                        <label for="zipCode">Cep</label>
                        <input type="text" class="form-control" id="zipCode" placeholder="Digite um Cep" required="">
                        <div class="invalid-feedback">Zip code required.</div>
                    </div>
                </div>

            </div>
        </div>

        <footer style="float:left">
            <button class="btn btn-secondary">Cadastrar</button>
        </footer>
    </div>
</body>
</html>
