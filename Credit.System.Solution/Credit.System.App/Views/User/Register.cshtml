@model DataBase.Operations.Tables.ServiceSystem.User
@using DataBase.Operations.Interfaces;
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
	<div>
		<h2 class="text-center mb-4">Registrar Usuário</h2>
		<form asp-action="Register" method="post">
			<div class="mb-3">
				<label for="loginInput" class="form-label">CPF</label>
				<input type="text" id="loginInput" name="Login" class="form-control" required>
			</div>
			<div class="mb-3">
				<label for="emailInput" class="form-label">Email</label>
				<input type="text" id="emailInput" name="Email" class="form-control" required>
			</div>
			<div class="mb-3">
				<label for="emailInput" class="form-label">Nome</label>
				<input type="text" id="emailInput" name="Name" class="form-control" required>
			</div>

			<div class="d-grid gap-2">
				<button type="submit" class="btn btn-primary">Registrar</button>
			</div>

			@{
				if (Model.CompanyId == 1)
				{
					<div class="mb-3">
						<label for="emailInput" class="form-label">Empresa</label>
						<input type="text" id="emailInput" name="Name" class="form-control" required>
					</div>
				}
			}

			</form>

		</div>
	</div>

