<div class="card shadow mb-4">
	<div class="card-header py-3 d-flex justify-content-between align-items-center">
		<h6 class="m-0 font-weight-bold text-primary">
			<i class="fas fa-table me-2"></i>Clientes
		</h6>
		<div class="d-flex">
			<div class="input-group me-2">
				<span class="input-group-text bg-light border-0">
					<i class="fas fa-search"></i>
				</span>
				<input type="text" class="form-control border-0 bg-light" id="searchInput" placeholder="Pesquisar...">
			</div>
			<button class="btn btn-light" id="refreshTable">
				<i class="fas fa-sync-alt"></i>
			</button>
		</div>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table id="dataTableClient" class="table table-hover table-bordered">
				<thead class="table-light">
					<tr>
						<th class="text-nowrap">Razão Social</th>
						<th class="text-nowrap">Nome Fantasia</th>
						<th class="text-nowrap">Telefone</th>
						<th class="text-nowrap">Telefone 2</th>
						<th>Email</th>
						<th>Cidade</th>
						<th>Estado</th>
						<th>Bairro</th>
						<th>Rua</th>
						<th>Nº</th>
						<th>Cep</th>
						<th>Observação</th>
						<th>Ações</th>
					</tr>
				</thead>
				<tbody>

					@foreach (ClientViewModel client in Model)
					{
						<tr>
							<td class="align-middle text-nowrap">@client.PrimaryName</td>
							<td class="align-middle text-nowrap">@client.SecondaryName</td>
							<td class="align-middle text-nowrap">@client.PrimaryPhone</td>
							<td class="align-middle text-nowrap">@client.SecondaryPhone</td>
							<td class="align-middle text-nowrap">@client.Email</td>
							<td class="align-middle text-nowrap">@client.City</td>
							<td class="align-middle text-nowrap">@client.State</td>
							<td class="align-middle text-nowrap">@client.Neighborhood</td>
							<td class="align-middle text-nowrap">@client.Street</td>
							<td class="align-middle text-nowrap">@client.StreetNumber</td>
							<td class="align-middle text-nowrap">@client.Zipcode</td>
							<td class="align-middle text-nowrap">@client.Observation</td>

							<td class="text-end">
								<div class="btn-group btn-group-sm">
									
									<button class="btn btn-primary btn-sm" data-bs-placement="top" title="Editar" data-bs-toggle="collapse" data-bs-target="#collapseEditClient" aria-expanded="false" aria-controls="collapseEditClient" onclick="SetEditClient(@JsonConvert.SerializeObject(client))">
										<i class="fas fa-edit"></i>
									</button>
									
									<button class="btn btn-danger btn-sm" style="cursor:pointer"data-bs-toggle="tooltip" data-bs-placement="top" title="Remover" onclick="GetRemoveClientModal(@client.ClientId)">
										<i class="fas fa-trash"></i>
									</button>

								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

