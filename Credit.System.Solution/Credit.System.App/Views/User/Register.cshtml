@model Credit.System.App.Models.RegisterUserModel;
@using Newtonsoft.Json
@using Platform.Entity.Interfaces;
@using Platform.Entity.ServiceSystem
@using System.Text.Json;

<div class="container" style="">
    
    <div class="container-fluid px-4">
        <button type="button" class="btn btn-secondary"  data-bs-toggle="modal" data-bs-target="#registerModal">
            <i class="fas fa-user-plus me-2"></i>Adicionar
        </button>
     
        
        <br />
        <br />


     @*    <td class="align-middle">
               <span class="badge bg-@(titulo.Status == "Pago" ? "success" : titulo.Status == "Pendente" ? "warning" : "info")">
                                            @titulo.Status
                                        </span> 
        </td> *@

        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-table me-2"></i>Usuários Cadastrados
                </h6>
                <div class="d-flex">
                    <div class="input-group me-2">
                        <span class="input-group-text bg-light border-0">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" class="form-control border-0 bg-light" id="searchInput" placeholder="Pesquisar...">
                    </div>
                    <button class="btn btn-light" id="refreshTable">
                        <i class="fas fa-sync-alt"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="datatablesSimple" class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Nome</th>
                                <th>Login</th>
                                <th>Email</th>
                                <th class="text-end">Ações</th> 
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (UserViewModel user in Model.Users)
                            {
                                <tr>
                                    <td class="align-middle">@user.Name</td>
                                    <td class="align-middle">@user.Login</td>
                                    <td class="align-middle">@user.Email</td>@* 
                                    <td class="align-middle">@titulo.Vencimento.ToString("dd/MM/yyyy")</td> *@
                                
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-primary btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Editar" onclick="GetEditUserModal(@JsonConvert.SerializeObject(user))">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-danger btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Deletar" @* onclick="excluirTitulo(@JsonConvert.SerializeObject(user.UserId) *@">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                            <button class="btn btn-success btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Acordos" @* onclick="excluirTitulo(@user.UserId) *@">
                                                <i class="fa fa-handshake"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row justify-content-center">
      
        <div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-secondary text-white">
                        <h5 class="modal-title" id="registerModalLabel">Editar Usuário</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                          
                            <div class="mb-3">
                                <label for="cpfInput" class="form-label">CPF</label>
                                <input type="text" id="cpfInput" name="Login" onfocus="applyCpfMask('cpfInput')" class="form-control">
                            </div>
                          
                            <div class="mb-3">
                                <label for="emailInput" class="form-label">Email</label>
                                <input type="email" id="emailInput" name="Email" class="form-control"
                                       placeholder="seu@email.com" required>
                                <div class="invalid-feedback">
                                    Por favor, insira um email válido.
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="nameInput" class="form-label">Nome Completo</label>
                                <input type="text" id="nameInput" name="Name" class="form-control">
                            </div>

                            @if (Model.CompanyId == 1)
                            {
                                <div class="mb-3">
                                    <label for="companyInput" class="form-label">Empresa</label>
                                    <select class="form-control" id="companyId">
                                        <option value="">Selecione</option>
                                        @foreach (Company company in Model.CompanyList)
                                        {
                                            <option value="@company.CompanyId">@company.PrimaryName</option>
                                        }
                                    </select>
                                </div>
                            }

                            <div class="d-grid mt-4">
                                <button type="submit" onclick="RegisterNewUser()" id="btnRegisterUser" class="btn btn-secondary btn-lg">
                                    <i class="fas fa-user-plus me-2"></i>Registrar
                                </button>
                            </div>
                     
                    </div>
                </div>
            </div>
        </div>
	</div>

    <div class="row justify-content-center">

        <div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-secondary text-white">
                        <h5 class="modal-title" id="registerModalLabel">Registrar Usuário</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <div class="mb-3">
                            <label for="cpfInput" class="form-label">CPF</label>
                            <input type="text" id="cpfInput" name="Login" onfocus="applyCpfMask('cpfInput')" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label for="emailInput" class="form-label">Email</label>
                            <input type="email" id="emailInput" name="Email" class="form-control"
                                   placeholder="seu@email.com" required>
                            <div class="invalid-feedback">
                                Por favor, insira um email válido.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="nameInput" class="form-label">Nome Completo</label>
                            <input type="text" id="nameInput" name="Name" class="form-control">
                        </div>

                        @if (Model.CompanyId == 1)
                        {
                            <div class="mb-3">
                                <label for="companyInput" class="form-label">Empresa</label>
                                <select class="form-control" id="companyId">
                                    <option value="">Selecione</option>
                                    @foreach (Company company in Model.CompanyList)
                                    {
                                        <option value="@company.CompanyId">@company.PrimaryName</option>
                                    }
                                </select>
                            </div>
                        }

                        <div class="d-grid mt-4">
                            <button type="submit" onclick="RegisterNewUser()" id="btnRegisterUser" class="btn btn-secondary btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Registrar
                            </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>



</div>




<script src="~/js/User.js"></script>
<script src="~/js/datatables.js"></script>
@* <script src="~/js/datatables-simple-demo.js"></script> *@