<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Cobrança</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Credit.System.App.styles.css" asp-append-version="true" />
    <style>
        /* Custom sidebar styles */
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            background-color: #f8f9fa;
            padding-top: 20px;
        }

            .sidebar a {
                display: block;
                padding: 10px;
                color: #333;
                text-decoration: none;
                font-weight: 500;
            }

                .sidebar a:hover {
                    background-color: #ddd;
                }

        .content-wrapper {
            margin-left: 250px;
            padding: 20px;
        }

        .navbar {
            margin-left: 250px;
        }

        .nav-item .collapse {
            padding-left: 10px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h3 class="text-center">Sistema de Cobrança</h3>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
            </li>

            <!-- Menu with collapsible submenus -->
            <li class="nav-item">
                
                <a class="nav-link text-dark" data-bs-toggle="collapse" href="#submenu1" role="button" aria-expanded="false" aria-controls="submenu1">
                    Cliente
                </a>
                
                <div class="collapse" id="submenu1">
                    <ul class="nav flex-column ms-3">
                     @*    <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Register">Usuário</a>
                        </li> *@
                          <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Client" asp-action="Register">Novo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Client" asp-action="GetClientsList">Lista de Clientes</a>
                        </li>
                        @*  <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Register">Empresa</a>
                        </li> *@
                    </ul>
                </div>
            
            </li>

            <!-- Another menu with collapsible submenus -->
            <li class="nav-item">
                <a class="nav-link text-dark" data-bs-toggle="collapse" href="#submenu2" role="button" aria-expanded="false" aria-controls="submenu2">
                    Usuário
                </a>
                <div class="collapse" id="submenu2">
                    <ul class="nav flex-column ms-3">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Register">Novo</a>
                        </li>
                       @*  <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Finance" asp-action="Reports">Relatórios</a>
                        </li> *@
                    </ul>
                </div>
            </li>


            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Logout">Sair</a>
        
        
        </ul>
    </div>

    <div class="content-wrapper">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; @DateTime.Now.Year - Sistema de Cobrança - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
